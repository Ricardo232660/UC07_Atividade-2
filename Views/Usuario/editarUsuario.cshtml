@model Usuario

<h1>Realize a Edição do Usuário</h1>

<form action="editarUsuario" method="post">
    <input type="text" name="Nome" id="userNome" value="@Model.Nome">
    <input type="text" name="login" id="userLogin" value="@Model.login">
    <input type="text" name="senha" id="userNome" value="@Model.senha">

    <select name="tipo" id="userTipo">
        <option value="@Usuario.ADMIN">Aministrador</option>
        <option value="@Usuario.PADRAO">Padrao</option>
    </select>


    <input type="hidden" asp-for="Id" />

    <input type="submit" value="CONCLIUR EDIÇÃO">


</form>